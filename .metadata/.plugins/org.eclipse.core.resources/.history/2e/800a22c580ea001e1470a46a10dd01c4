package Day_240325;

public class Practice1 {
   public static void main(String[] args) {

	    public String solution(String str1, String str2) {
	        String answer = "";
	        String st1 = "aaaaaa";
	        String st2 = "bbbbb";
	        int leng = str1.length() + str2.length();
	        
	        for (int i = 0; i < leng; i++) {
	            if (i < str1.length()) {
	                answer += str1.charAt(i);    
	                answer += str2.charAt(i);
	                    
	            }
	        }

	        return answer;
	    }
   }
}
